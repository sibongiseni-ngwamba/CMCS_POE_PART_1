<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-dark text-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">
                <img src="~/images/cmcs-logo.png" alt="CMCS Portal Logo" class="me-2" />
                CMCS Portal
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>

                    @if (Context.Session.GetString("Role") == "Lecturer")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Claims" asp-action="New">New Claim</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Claims" asp-action="Index">Track Claims</a></li>
                    }
                    @if (Context.Session.GetString("Role") == "Coordinator")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Approval" asp-action="Verify">Verify Claims</a></li>
                    }
                    @if (Context.Session.GetString("Role") == "Manager")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Approval" asp-action="Approve">Approve Claims</a></li>
                    }
                    @if (Context.Session.GetString("Role") == "HRManager")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="HR" asp-action="Dashboard">HR Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="HR" asp-action="Lecturers">Manage Lecturers</a></li>
                    }
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <button class="btn btn-outline-light me-2" onclick="toggleTheme()">Toggle Theme</button>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-light ms-2" asp-controller="Account" asp-action="Logout">Sign Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show animate__animated animate__slideInDown" role="alert">@TempData["Success"] <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show animate__animated animate__shakeX" role="alert">@TempData["Error"] <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">@TempData["Warning"] <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
        }

        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>AOS.init();</script>
    <script src="~/js/app.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
