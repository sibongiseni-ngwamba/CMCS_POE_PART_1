@model List<CMCS_POE_PART_2.Models.User>

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Manage Lecturers</h5>
    </div>
    <div class="card-body">
        <form class="row g-3 mb-3" method="get">
            <div class="col-md-8">
                <label class="form-label">Search</label>
                <input type="text" name="q" class="form-control" placeholder="Name or email..." value="@ViewBag.Query" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </form>

        @if (!Model.Any())
        {
            <p class="text-muted">No lecturers found.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td>@(u.full_names + " " + u.surname)</td>
                                <td>@u.email</td>
                                <td>@u.gender</td>
                                <td class="table-actions">
                                    <a class="btn btn-sm btn-outline-info" asp-action="EditLecturer" asp-route-id="@u.userID">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
