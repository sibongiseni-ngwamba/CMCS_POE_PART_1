@model List<CMCS_POE_PART_2.Models.Claim>
<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Track Your Claims</h5>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <p class="text-muted">No claims yet. <a asp-action="New" class="text-primary">Submit one now?</a></p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Module</th>
                            <th>Faculty</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Progress</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>@claim.module_name</td>
                                <td>@claim.faculty_name</td>
                                <td>R @claim.TotalAmount.ToString("F2")</td>
                                <td><span class="badge @(claim.claim_status == "Approved" ? "bg-success" : claim.claim_status == "Rejected" ? "bg-danger" : claim.claim_status == "Verified" ? "bg-warning" : "bg-secondary")">@claim.claim_status</span></td>
                                <td>@claim.creating_date.ToShortDateString()</td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar @(claim.claim_status == "Approved" ? "bg-success" : claim.claim_status == "Verified" ? "bg-warning" : claim.claim_status == "Pending" ? "bg-info" : "bg-danger")"
                                             role="progressbar" style="width: @(claim.claim_status == "Approved" ? 100 : claim.claim_status == "Verified" ? 66 : claim.claim_status == "Pending" ? 33 : 0)%"
                                             aria-valuenow="@(claim.claim_status == "Approved" ? 100 : claim.claim_status == "Verified" ? 66 : claim.claim_status == "Pending" ? 33 : 0)" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
